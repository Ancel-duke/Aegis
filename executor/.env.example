# Application
NODE_ENV=development
PORT=4000
SERVICE_NAME=aegis-executor

# Database - PostgreSQL (for audit logs)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=executor_user
DB_PASSWORD=your_secure_password
DB_DATABASE=executor_db

# JWT Authentication
JWT_SECRET=your_jwt_secret_change_this_in_production
JWT_ISSUER=aegis-policy-engine

# Kubernetes
KUBERNETES_NAMESPACE=default
KUBECONFIG_PATH=/path/to/kubeconfig
IN_CLUSTER=false

# Policy Engine
POLICY_ENGINE_URL=http://localhost:3000/api/v1/policy/evaluate

# Rate Limiting
RATE_LIMIT_RESTART_TTL=300
RATE_LIMIT_RESTART_MAX=5
RATE_LIMIT_SCALE_TTL=60
RATE_LIMIT_SCALE_MAX=10

# Audit Logging
LOKI_URL=http://localhost:3100
AUDIT_LOG_RETENTION_DAYS=90

# Security
REQUIRE_ACTION_SIGNATURE=true
ALLOWED_NAMESPACES=default,production,staging
