# Aegis Observability Configuration

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_password

# Alert Manager
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PAGERDUTY_SERVICE_KEY=your_pagerduty_key

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318

# Retention
PROMETHEUS_RETENTION_DAYS=30
LOKI_RETENTION_DAYS=90
TEMPO_RETENTION_DAYS=7

# Resource Limits
PROMETHEUS_MEMORY_LIMIT=2GB
GRAFANA_MEMORY_LIMIT=512MB
LOKI_MEMORY_LIMIT=1GB
