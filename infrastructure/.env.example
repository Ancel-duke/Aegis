# Aegis Infrastructure Configuration

# PostgreSQL - Backend Database
BACKEND_DB_HOST=postgres-backend
BACKEND_DB_PORT=5432
BACKEND_DB_USER=aegis_backend_user
BACKEND_DB_PASSWORD=change_this_to_strong_password
BACKEND_DB_NAME=aegis_backend
BACKEND_DB_SSL_MODE=require

# PostgreSQL - AI Engine Database
AI_DB_HOST=postgres-ai
AI_DB_PORT=5432
AI_DB_USER=aegis_ai_user
AI_DB_PASSWORD=change_this_to_strong_password
AI_DB_NAME=aegis_ai
AI_DB_SSL_MODE=require

# PostgreSQL - Executor Database
EXECUTOR_DB_HOST=postgres-executor
EXECUTOR_DB_PORT=5432
EXECUTOR_DB_USER=aegis_executor_user
EXECUTOR_DB_PASSWORD=change_this_to_strong_password
EXECUTOR_DB_NAME=aegis_executor
EXECUTOR_DB_SSL_MODE=require

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6380
REDIS_PASSWORD=change_this_to_strong_password
REDIS_TLS=true
REDIS_DB=0

# Loki Configuration
LOKI_URL=http://loki:3100
LOKI_RETENTION_DAYS=90

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=change_this_to_random_32_chars

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/ssl/certs
SSL_KEY_PATH=/ssl/private
SSL_CA_PATH=/ssl/ca

# Connection Pooling
BACKEND_DB_POOL_MIN=2
BACKEND_DB_POOL_MAX=20
AI_DB_POOL_MIN=2
AI_DB_POOL_MAX=10
EXECUTOR_DB_POOL_MIN=2
EXECUTOR_DB_POOL_MAX=10

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
